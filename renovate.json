{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["python"],
      "matchCurrentValue": "/^\\d+\\.\\d+-slim$/",
      "groupName": "Python Slim Minor Updates",
      "matchUpdateTypes": ["minor"],
      "description": "Updates Python slim images to the latest minor version."
    }
  ]
}
