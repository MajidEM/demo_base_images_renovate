{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": ["python"],
      "matchDatasources": ["docker"],
      "allowedVersions": "/^{{{replace currentVersion '^(\\d+\\.\\d+)(\\.|\\-).*' '$1'}}}\\.\\d+-slim$/",
      "description": "Update Python slim images to latest patch within minor version"
    }
  ]
}
