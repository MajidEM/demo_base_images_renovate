{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": ["python"],
      "allowedVersions": "/^{{{3 '^(\\d+\\.\\d+)\\..*' '$1'}}}\\.\\d+(-.*)?$/",
      "matchDatasources": ["docker"],
      "description": "Pin Python patch updates to current minor version"
    }
  ]
}
