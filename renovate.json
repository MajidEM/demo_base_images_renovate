{
  "extends": ["config:base"],
  "docker": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^python", "^golang"],
      "updateTypes": ["minor", "patch"],
      "enabled": true
    },
    {
      "matchManagers": ["gomod"],
      "matchPackagePatterns": ["^"],
      "updateTypes": ["minor", "patch"],
      "enabled": true
    },
    {
      "matchManagers": ["pip_requirements", "poetry"],
      "updateTypes": ["minor", "patch"],
      "enabled": true
    }
  ]
}
