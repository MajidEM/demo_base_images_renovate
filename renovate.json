{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": ["python"],
      "matchManagers": ["dockerfile"],
      "allowedVersions": "^3\.10\.[0-9]+(\\.[0-9]+)?$/",
      "pinDigests": true
    },
    {
      "matchPackageNames": ["python"],
      "matchManagers": ["dockerfile"],
      "allowedVersions": "3.12.x",
      "pinDigests": true
    },
    {
      "matchPackageNames": ["python"],
      "matchManagers": ["dockerfile"],
      "ignoreUnstable": true,
      "enabled": true
    }
  ]
}
