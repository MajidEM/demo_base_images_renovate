{
  "extends": ["config:base"],
  "docker": {
    "enabled": true,
    "pinDigests": true
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^python"],
      "matchPackageNames": [
        "python:3.9",
        "python:3.10-slim",
        "python:3.11-slim",
        "python:3.12-slim"
      ],
      "updateTypes": ["minor"],
      "enabled": true
    }
  ]
}
